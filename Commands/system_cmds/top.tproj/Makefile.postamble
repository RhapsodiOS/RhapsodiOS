# top needs to be installed with kmem group permissions to read kernel memory
INSTALL_AS_GROUP = kmem
INSTALL_PERMISSIONS = 2755

# Signal include file location for sigdesc.h generation
SIGNAL = /usr/include/sys/signal.h

# Rule to generate sigdesc.h from signal definitions
# This file is needed by commands.c
sigdesc.h: sigconv.awk $(SIGNAL)
	$(AWK) -f sigconv.awk $(SIGNAL) >sigdesc.h

# Make sure sigdesc.h is built before compiling commands.c
$(OFILE_DIR)/commands.o: sigdesc.h

# Additional clean targets
clean:
	-$(RM) -f sigdesc.h

